<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="5" author="alexander">
        <createTable tableName="comment">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_profile_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="parent_comment_id" type="bigint"/>
            <column name="body" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="comment"
                                 baseColumnNames="user_profile_id"
                                 constraintName="fk_user_commented_on"
                                 referencedTableName="user_profile"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="comment"
                                 baseColumnNames="parent_comment_id"
                                 constraintName="fk_comment_parent_comment"
                                 referencedTableName="comment"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="comment"
                                 baseColumnNames="post_id"
                                 constraintName="fk_comment_post"
                                 referencedTableName="post"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>